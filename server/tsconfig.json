{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "outDir": "dist",
    "module": "CommonJS",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "suppressExcessPropertyErrors": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
